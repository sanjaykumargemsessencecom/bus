<div class="search_form">
  <%= form_tag({controller: "customers", action: "show"}, method: "get", class: "orm-inline") do %>
    <%= label_tag(:source, "Source:") %>
    <%= text_field_tag(:source,nil,:required => true, :value cookies[:source] )%>
    <%= label_tag(:destination, "Destination:") %>
    <%= text_field_tag(:destination,nil,:required => true, :value cookies[:destination]) %>
    <%= submit_tag("Search") %>

  <% end %>
</div>

<div class="sidenav">
</div>
<center><%=@customer.name%></center>
<table class="table" style="width:85%">
  <th>Bus Name</th>
  <th>Bus No</th>
  <th>Source</th>
  <th>Destination</th>
  <th>Available Seats</th>
  <th>Rent</th>
  <th>Do<th>
  <%@buses.each do |bus|%>
  <tr class="info">
    <td>
      <%=bus.bus_name%>
    </td>
    <td>
      <%=bus.bus_no%>
    </td>
    <td>
      <%=bus.source%>
    </td>
    <td>
      <%=bus.destination%>
    </td>
    <td>
      <%=available(bus.id)%>
    </td>
    <td>
      <%=bus.rent%>
    </td>
    <td>
    <button class="btn btn-default"><%= link_to "Book It",{controller: 'reservations',
                 action: 'show',
                 customer_id: current_user.id,
                 id: bus.id}%>
             </button>

    </td>


  <tr>
	<%end%>
</table>
