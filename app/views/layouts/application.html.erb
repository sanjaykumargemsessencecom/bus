<!DOCTYPE html>
<html>
  <head>
    <title>BusReservation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  
   <style type="text/css">
  
     .changing_text{

        -webkit-animation: color-change 2s infinite;
       }

     @-webkit-keyframes color-change {
        0% { color: orangered; }
        25% { color: white; }
        50% { color: green; }
        100% { color: orangered; }
      }
    
    </style>
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css"> 
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script> 
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script> 

  </head>

  <body>
   <nav class="navbar navbar-inverse" style="position: static;">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><p class="changing_text">Bus Reservation</p></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%=link_to("Home",root_path, style:'color:white')%>
      </li>
   <%if current_user%>
   <% if current_user.status==2 %>
      <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#"><%if current_user%>
        <%=link_to("Add Bus",new_owners_bus_path, style:'color:white;margin-top:-30px')%>
          <%=link_to("All Bus",owners_buses_path, style:'color:white;margin-top:-50px;margin-left:70px')%>
    <%end%> 
      
      </li>
    
    </ul>

     <%end%>
     <%end%>
    <ul class="nav navbar-nav navbar-right" style="margin-right: 100px;margin-top:-40px">
      <%if !user_session%>
      <li><a href="#"><span class="glyphicon glyphicon-user" ><%= link_to 'Sign Up', new_user_registration_path, style:'color:white;margin-top:-10px;margin-left:20px'%>
      </span ></a></li>
      <%end%>
      <%if user_session%>
     <li>



    <%if user_admin?%>
       <a href="#"><span class="glyphicon glyphicon-log-in"><%=link_to("Bus Owners",admins_users_path, style:'color:white;margin-top:-10px;margin-left:20px')%></span></a></li>
      <li>
      <a href="#"><span class="glyphicon glyphicon-log-in"><%=link_to("Account",admins_reservations_path, style:'color:white;margin-top:-10px;margin-left:20px')%></span></a></li>
      <li>
        <%end%>
       <%if user_owner?%>
          <a href="#"><span class="glyphicon glyphicon-log-in"><%=link_to("Account",owners_reservations_path, style:'color:white;margin-top:-10px;margin-left:20px')%></span></a></li>
      <li>
       <%end%>
        <%if user_customer?%>
             <a href="#"><span class="glyphicon glyphicon-log-in"><%=link_to("Account",reservations_path, style:'color:white;margin-top:-10px;margin-left:20px')%></span></a></li>
      <li>
        <%end%>
         <%=link_to(current_user.name.capitalize,edit_user_registration_path, style:'color:white;margin-top:40px;margin-left:0px;background-color:slategrey ')%></span></a></li>
      <li>
        <a href="#"><span class="">
          <%=link_to("Logout",destroy_user_session_path, style:'color:white;margin-top:10px;margin-left:0px', method: :delete,class:'logout')%></span></a></li>
   <%else%>
      <li><a href="#"><span class="glyphicon glyphicon-log-in"><%=link_to("Login",new_user_session_path, style:'color:white;margin-top:-10px;margin-left:20px')%></span></a></li>
    <%end%>
    </ul>
  </div>
</nav>

     <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
